#ifndef GRADES_H
#define	GRADES_H
#include <iostream>
using namespace std;

class Grades{
public:
    Grades();
    double divideScores(double rawScore, double totalPossible);
    double calcWeightedScore(double score, double weight);
    
    string name;
    int id;
    double* gradesArray;
    
    void fill(double** p, int rowSize, int colSize);
    void fill(string** p, int rowSize, int colSize);
};



#endif	/* GRADES_H */

