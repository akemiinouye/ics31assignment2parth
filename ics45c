#include "manage_input.h"
#include <iostream>
#include <sstream>
using namespace std;

ManageInput::ManageInput(){}

void ManageInput::divInput(){
    getline(cin,location);
    istringstream iss(location);
    iss >> latitude >> longitude;
    getline(iss,airport);
    
    cout << latitude << endl;
    cout << longitude << endl;
    cout << airport << endl;
}

string ManageInput::getLatInput(){
    divInput();
    return latitude;
}

string ManageInput::getLonInput(){
    divInput();
    return longitude;
}

double ManageInput::getValues(string coordinate){
    const char* x = coordinate.c_str();
    double val = atof(x);
    return val;
}

double ManageInput::getLatVal(string latitude){
    latVal = getValues(latitude);
    cout << "latVal: " << latVal;
    return latVal;
}

double ManageInput::getLonVal(string longitude){
    lonVal = getValues(longitude);
    cout << "lonVal: " << lonVal;
    return lonVal;
}
