#include "grades.h"
#include <iostream>
using namespace std;

Grades::Grades(){}

double Grades::divideScores(double rawScore, double totalPossible){
    return rawScore/totalPossible;
}

double Grades::calcWeightedScore(double score, double weight){
    return score*weight;
}

void Grades::fill(double** p, int rowSize, int colSize){
    for(int row=0;row<rowSize; row++){
        for(int col=0; col<colSize; col++){
            cin >> p[row][col];
        }
    }
}

void Grades::fill(string** p, int rowSize, int colSize){
    for(int row=0;row<rowSize; row++){
        for(int col=0; col<colSize; col++){
            cin >> p[row][col];
        }
    }
}
