void Grades::fill(double** p, int rowSize, int colSize){
    for(int row=0;row<rowSize; row++){
        cout << "Enter " << colSize << " numbers for row number " << row << ": ";
        for(int col=0; col<colSize; col++){
            cin >> p[row][col];
        }
    }
}

void Grades::fill(string** p, int rowSize, int colSize){
    for(int row=0;row<rowSize; row++){
        cout << "Enter " << colSize << " numbers for row number " << row << ": ";
        for(int col=0; col<colSize; col++){
            cin >> p[row][col];
        }
    }
}

